<div class="mb-2">
    <h6>Bienvenido, {{user.name}}</h6>
</div>
<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card mt-4" id="card">
            <div class="card-body" id="titulo">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}">
                        <box-icon name='edit' size="sm" animation="tada-hover" color='#6486f2' aria-placeholder="edit"></box-icon>
                    </a>

                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit"> Borrar </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No hay Notas</p>
            <a href="/notes/add" class="btn btn-primary btn-block"> Crear nota</a>
        </div>
    </div>
    {{/each}}
</div>